<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PracticaInterfacesPrimerTrimestre.Templates.TemplatePerro"
             xmlns:mo="clr-namespace:PracticaInterfacesPrimerTrimestre.Modelo"
             Title="TemplatePerro"
             x:DataType="mo:Dog">
    <Frame Background="white" Margin="5" Padding="5" WidthRequest="500">
        <StackLayout Margin="10,0,0,0" Orientation="Vertical">
            <Image
                Source="{Binding Image.Url}"
                WidthRequest="100"
                HeightRequest="50"/>
            <Label Text="{Binding Name}" x:Name="NombrePerro" FontSize="18" FontAttributes="Bold" TextColor="#B21A32" Margin="0,0,0,10"/>
            <Button
                x:Name="ButtonFavourite"
                Clicked="AddToFavourites"
                TextColor="Black"
                WidthRequest="250"/>
        </StackLayout>
    </Frame>
</ContentPage>