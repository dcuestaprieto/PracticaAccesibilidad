<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PracticaInterfacesPrimerTrimestre"
             x:Class="PracticaInterfacesPrimerTrimestre.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <ControlTemplate x:Key="plantilla">
                
                <Grid RowDefinitions="auto, *, auto">
                    <Image Source="icon.jpg" Grid.Row="0" WidthRequest="50" HeightRequest="50" HorizontalOptions="Start" Margin="10"/>
                    <ContentPresenter Grid.Row="1"/>

                    <Label Text="Linkedin" Grid.Row="2"/>
                </Grid>
            </ControlTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
